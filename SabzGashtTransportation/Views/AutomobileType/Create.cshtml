@model SabzGashtTransportation.ViewModel.AutomobileTypeViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPageDealer.cshtml";
    @Styles.Render("~/css/style.css");

}

<h2>ثبت مدل اتومبیل</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class="control-label">کولر دار:</p>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EnumDropDownListFor(x => x.HasCoolerEnum, "انتخاب کنید", new { @class = "form-control" })
                    @*  @Html.DropDownList("کولر", (IEnumerable<SelectListItem>)ViewBag.AutomobileType, "--", htmlAttributes: new { @class = "form-control" })*@
                    @Html.ValidationMessageFor(model => model.HasCooler, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <p class="control-label">نوع اتومبیل:</p>
            <div class="col-md-10">
                @* @Html.EditorFor(model => model.IsBus, new { htmlAttributes = new { @class = "form-control" } })*@
                @*       @Html.DropDownList("اتومبیل", (IEnumerable<SelectListItem>)ViewBag.AutomobileType, "--", htmlAttributes: new { @class = "form-control" })*@
                @Html.EnumDropDownListFor(x => x.IsBusEnum, "انتخاب کنید", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IsBus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label">توضیحات:</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">ثبت</button>
            </div>
        </div>
    </div>
}


<div class="link-back">
    @Html.ActionLink("بازگشت به لیست", "Index")
</div>
