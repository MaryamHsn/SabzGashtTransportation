@using Sabz.ServiceLayer.Utils
@model SabzGashtTransportation.ViewModel.PaymentViewModel 

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPageDealer.cshtml";
    @Styles.Render("~/css/style.css");
}

<h2>اطلاعات بیشتر</h2>

<div>
    <table class="tbl-show">
        <tr class="tbl-tr-show">
            <th class="tbl-th-show"> نام راننده:</th>
            <th> @Html.DisplayFor(model => model.DriverFullName)</th>
        </tr>
        <tr class="tbl-tr-show">
            <th class="tbl-th-show">مساعده:</th>
            <th> @Html.DisplayFor(model => model.PreHelpCost)</th>
        </tr>
        <tr class="tbl-tr-show">
            <th class="tbl-th-show"> بیمه:</th>
            <th> @Html.DisplayFor(model => model.Insurance)</th>
        </tr>
        <tr class="tbl-tr-show">
            <th class="tbl-th-show">جریمه:</th>
            <th> @Html.DisplayFor(model => model.Fine)</th>
        </tr>   <tr class="tbl-tr-show">
            <th class="tbl-th-show">مالیات:</th>
            <th> @Html.DisplayFor(model => model.Tax)</th>
        </tr>   <tr class="tbl-tr-show">
            <th class="tbl-th-show">هزینه تصادف:</th>
            <th> @Html.DisplayFor(model => model.AccidentCost)</th>
        </tr>   <tr class="tbl-tr-show">
            <th class="tbl-th-show">تاریخ:</th>
            <th> @Html.DisplayFor(model => model.CreateDateString)</th>
        </tr>

    </table>

</div>
<p>
    <div class="link-back">
        @Html.ActionLink("ویرایش", "Edit", new { id = Model.PaymentId }) |
        @Html.ActionLink("بازگشت به لیست", "Index")
    </div>
</p>