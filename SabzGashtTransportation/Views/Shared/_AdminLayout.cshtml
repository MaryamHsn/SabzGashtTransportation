    <script>
        // www.moisrex.rozblog.com
        function replace(txt, replacer, withthis) { return txt.replace(new RegExp(replacer, "gim"), withthis); }
        function moisrexnumber() {
            a = replace(document.body.innerHTML, '1', '۱');
            b = replace(a, '2', '۲');
            c = replace(b, '3', '۳');
            d = replace(c, '4', '۴');
            e = replace(d, '5', '۵');
            f = replace(e, '6', '۶');
            g = replace(f, '7', '۷');
            h = replace(g, '8', '۸');
            i = replace(h, '9', '۹');
            moisrex = replace(i, '0', '۰');
            document.body.innerHTML = moisrex;
        }
        window.onload = moisrexnumber;
    </script>

