@using Sabz.ServiceLayer.Enumration
@using Sabz.ServiceLayer.Extension
@model SabzGashtTransportation.ViewModel.RoutViewModel


@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPageDealer.cshtml";
    @Styles.Render("~/css/style.css");

}

<h2>آیا مطمئن از حذف هستید؟ </h2>
<div>
    <table class="tbl-show">
        <tr class="tbl-tr-show">
            <th class="tbl-th-show">نام مسیر:</th>
            <th> @Html.DisplayFor(model => model.Name)</th>
        </tr>
        <tr class="tbl-tr-show">
            <th class="tbl-th-show">نوع مسیر:</th>
            <th> @Html.DisplayFor(model => model.ShiftType)</th>
        </tr>
        <tr class="tbl-tr-show">
            <th class="tbl-th-show">ساعت ورورد:</th>
            <th> @Html.DisplayFor(model => model.EnterTime)</th>
        </tr>
        <tr class="tbl-tr-show">
            <th class="tbl-th-show">ساعت خروج:</th>
            <th> @Html.DisplayFor(model => model.ExitTime)</th>
        </tr>
        <tr class="tbl-tr-show">
            <th class="tbl-th-show">تاریخ شروع:</th>
            <th> @Html.DisplayFor(model => model.StartDateString)</th>
        </tr>
        <tr class="tbl-tr-show">
            <th class="tbl-th-show">تاریخ پایان:</th>
            <th> @Html.DisplayFor(model => model.EndDateString)</th>
        </tr>

        <tr class="tbl-tr-show">
            <th class="tbl-th-show">منطقه:</th>
            <th> @Html.DisplayFor(model => model.RegionName)</th>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-danger">حذف</button>
            </div>
        </div>

        <div class="link-back">
            @Html.ActionLink("بازگشت به لیست", "Index")
        </div>
    }
</div>