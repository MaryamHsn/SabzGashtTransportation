@using Sabz.DomainClasses.DTO
@using Sabz.ServiceLayer.Enumration
@using Sabz.ServiceLayer.Utils
@model SabzGashtTransportation.ViewModel.AutomobileTypeViewModel

@{
    ViewBag.Title = "ویرایش مدل اتومبیل"; 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    @Styles.Render("~/css/css/style.css");
}


    <h2 class="style-h2"> ویرایش مدل اتومبیل</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id) 


        <div class="form-group">
            <p class="control-label">کولر دار:</p>
            <div class="col-md-10">
                @Html.EnumDropDownListFor(x => x.HasCoolerEnum, "انتخاب کنید", new { @class = "form-control" })
                @*  @Html.DropDownListFor(x => Model.DriverId, new SelectList(Model.Drivers, "DriverId", "FullName"), htmlAttributes: new {@class = "form-control", id = "DriverSelect"})*@
                @Html.ValidationMessageFor(x => x.HasCooler, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label">نوع ماشین:</p>
            <div class="col-md-10">
                @*@{
                        if (Model.IsBus == (int)AutomobileTypeEnum.Bus)
                        {
                            insurancTextShowDefault = AutomobileTypeEnum.Bus.ToString();
                        }
                        else
                        {
                            insurancTextShowDefault = AutomobileTypeEnum.Bus.ToString();
                        }
                    }*@
                @Html.EnumDropDownListFor(x => x.IsBusEnum, "انتخاب کنید", new { @class = "form-control" })

                @* @Html.DropDownList("استفاده از بیمه", (IEnumerable<SelectListItem>)ViewBag.insurance, insurancTextShowDefault, htmlAttributes: new { @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.IsBus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label">توضیحات:</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">ثبت</button>
            </div>
        </div>
    </div>
}
<div class="link-back">
    @Html.ActionLink("بازگشت به لیست", "Index")
</div>

