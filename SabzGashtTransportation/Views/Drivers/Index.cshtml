@model IEnumerable<Sabz.DomainClasses.DTO.DriverTbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageDealer.cshtml";
    @Styles.Render("~/css/style.css");

    @*@Styles.Render("~/css/bootstrap-rtl.css")
        @Styles.Render("~/font-awesome/css/font-awesome.css")
        @Styles.Render("~/css/plugins/dataTables/dataTables.bootstrap.css")
        @Styles.Render("~/sb-admin.css")*@


}


<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Start Bootstrap - SB Admin Version 2.0 Demo</title>

    <!-- Core CSS - Include with every page -->
    <link href="~/css/bootstrap-rtl.css" rel="stylesheet">
    <link href="~/font-awesome/css/font-awesome.css" rel="stylesheet">

    <!-- Page-Level Plugin CSS - Tables -->
    <link href="~/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet">


</head>

<body>

    <div id="wrapper">


        <div id="page-wrapper">

            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">

                        <h2>لیست کارکنان</h2>
                        <button type="button"onclick="location.href='@Url.Action("create")';return false;" class="btn btn-success">کارمند جدید</button>

                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Rendering engine</th>
                                            <th>Browser</th>
                                            <th>Platform(s)</th> 
                                            <th>ویرایش</th>
                                            <th>حذف</th>

                                        </tr>
                                    </thead>

                                    @foreach (var item in Model)
                                    {
                                        <tbody>
                                            <tr class="odd gradeX">
                                                <td>@item.DriverId</td>
                                                <td>@item.FirstName</td>
                                                <td>@item.Address</td> 
                                                <td>
                                                    @Html.ActionLink("ویرایش", "Edit",new { id = item.DriverId })
                                                </td>
                                                <td>
                                                    @Html.ActionLink("حذف", "Delete",new { id = item.DriverId})
                                                </td>

                                            </tr>
                                            <tr class="even gradeC">
                                                <td>Trident</td>
                                                <td>Internet Explorer 5.0</td>
                                                <td>Win 95+</td>
                                                <td class="center">5</td>
                                                <td class="center">C</td> 
                                            </tr>

                                        </tbody>
                                    }
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Core Scripts - Include with every page -->
    <script src="~/js/jquery-1.10.2.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/plugins/metisMenu/jquery.metisMenu.js"></script>

    <!-- Page-Level Plugin Scripts - Tables -->
    <script src="~/js/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/js/plugins/dataTables/dataTables.bootstrap.js"></script>

    <!-- SB Admin Scripts - Include with every page -->
    <script src="~/js/sb-admin.js"></script>

    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>

</body>

</html>
