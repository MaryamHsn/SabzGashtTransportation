@using Sabz.ServiceLayer.Enumration
@using Sabz.ServiceLayer.Extension
@using Sabz.ServiceLayer.Utils
@model SabzGashtTransportation.ViewModel.DriverRoutViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPageDealer.cshtml";
    @Styles.Render("~/css/style.css");
}

<h2>اطلاعات بیشتر</h2>

<div>
    <table class="tbl-show">
        <tr class="tbl-tr-show">
            <th class="tbl-th-show">راننده:</th>
            <th> @Html.DisplayFor(model => model.DriverFullName)</th>
        </tr>
        <tr class="tbl-tr-show">
            <th class="tbl-th-show"> محدوده مسیر:</th>
            <th> @Html.DisplayFor(model => model.RoutRegionName)</th>
        </tr>
        <tr class="tbl-tr-show">
            <th class="tbl-th-show"> ساعت مسیر:</th>
            <th> @Html.DisplayFor(model => model.RoutEnterTimeString)</th>
        </tr>
        <tr class="tbl-tr-show">
            <th class="tbl-th-show">تاریخ مسیر:</th>
            <th> @Html.DisplayFor(model => model.RoutStartDateString)</th>
        </tr>
        <tr class="tbl-tr-show">
            <th class="tbl-th-show">شماره راننده:</th>
            <th> @Html.DisplayFor(model => model.Phone1)</th>
        </tr>
        <tr class="tbl-tr-show">
            <th class="tbl-th-show">:مسیر ورودی/خروجی</th>
            <th> @(Model.RoutShiftType== (int)ShiftTypeEnum.Enter? ShiftTypeEnum.Enter.GetDisplayName() : ShiftTypeEnum.Exit.GetDisplayName())</th>

        </tr>
        @*<tr class="tbl-tr-show">
            <th class="tbl-th-show">مسیر همیشگی؟</th>
            <th> @(Model.IsTemporary == (int)RoutTypeEnum.Temporary? RoutTypeEnum.Temporary.GetDisplayName() : RoutTypeEnum.Always.GetDisplayName())</th>
        </tr>*@

    </table>
</div>
